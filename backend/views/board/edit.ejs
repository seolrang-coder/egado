<!doctype html>
<html lang="ko">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= categoryName || '글 수정' %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@400;600;700;800&display=swap" rel="stylesheet">
  <style> body{font-family:'Noto Sans KR',system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial}</style>
</head>
<body>
  <nav class="navbar navbar-expand-lg bg-light border-bottom">
    <div class="container">
      <a class="navbar-brand" href="<%= category ? `/category/${category}` : '/board' %>"><%= categoryName || '게시판' %></a>
      <div class="ms-auto d-flex gap-2">
        <form action="/logout" method="post"><button class="btn btn-outline-secondary btn-sm">로그아웃</button></form>
      </div>
    </div>
  </nav>

  <main class="container py-4" style="max-width: 800px;">
    <h1 class="h3"><%= categoryName || '글 수정' %></h1>
    <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <form action="<%= category ? `/category/${category}/posts/${post.id}` : `/posts/${post.id}` %>" method="post" enctype="multipart/form-data" class="mt-3">
      <div class="mb-3">
        <label class="form-label">제목</label>
        <input name="title" class="form-control" value="<%= post.title %>" required />
      </div>
      
      <% 
        // 사업 정보 파싱
        let businessName = '';
        let date = '';
        let target = '';
        let participants = '';
        let cleanedContent = post.content;
        const projectCategories = ['lovehouse', 'volunteer', 'mobilitycare', 'beauty'];
        
        if (category && projectCategories.includes(category) && post.content) {
          const lines = post.content.split('\n');
          const businessLine = lines.find(line => line.trim().startsWith('사업명:'));
          const dateLine = lines.find(line => line.trim().startsWith('실시일:'));
          const targetLine = lines.find(line => line.trim().startsWith('대상:'));
          const participantsLine = lines.find(line => line.trim().startsWith('참여인원:'));
          const phoneLine = lines.find(line => line.trim().startsWith('전화:'));
          const hoursLine = lines.find(line => line.trim().startsWith('접수시간:'));
          
          if (businessLine) businessName = businessLine.replace('사업명:', '').trim();
          if (dateLine) date = dateLine.replace('실시일:', '').trim();
          if (targetLine) target = targetLine.replace('대상:', '').trim();
          if (participantsLine) participants = participantsLine.replace('참여인원:', '').trim();
          var phone = '';
          var hours = '';
          if (phoneLine) phone = phoneLine.replace('전화:', '').trim();
          if (hoursLine) hours = hoursLine.replace('접수시간:', '').trim();
          
          // 본문에서 해당 라인들 제거
          cleanedContent = lines
            .filter(line => {
              const trimmed = line.trim();
              return !trimmed.startsWith('사업명:') && 
                     !trimmed.startsWith('실시일:') && 
                     !trimmed.startsWith('대상:') && 
                     !trimmed.startsWith('참여인원:') &&
                     !trimmed.startsWith('전화:') &&
                     !trimmed.startsWith('접수시간:') &&
                     trimmed !== '';
            })
            .join('\n')
            .trim();
        }
      %>
      
      <% if (category && projectCategories.includes(category)) { %>
        <div class="card mb-3 border-primary">
          <div class="card-header bg-primary text-white">
            <h6 class="mb-0"><i class="bi bi-info-circle me-2"></i>사업 정보</h6>
          </div>
          <div class="card-body">
            <div class="row g-3">
              <div class="col-md-6">
                <label class="form-label">사업명</label>
                <input type="text" name="businessName" class="form-control" value="<%= businessName %>" placeholder="사업명을 입력하세요" />
              </div>
              <div class="col-md-6">
                <label class="form-label">실시일</label>
                <input type="text" name="date" class="form-control" value="<%= date %>" placeholder="예: 2025.01.15" />
              </div>
              <div class="col-md-6">
                <label class="form-label">대상</label>
                <input type="text" name="target" class="form-control" value="<%= target %>" placeholder="대상을 입력하세요" />
              </div>
              <div class="col-md-6">
                <label class="form-label">참여인원</label>
                <input type="text" name="participants" class="form-control" value="<%= participants %>" placeholder="예: 30명" />
              </div>
              
            </div>
          </div>
        </div>
      <% } %>
      
      <div class="mb-3">
        <label class="form-label">내용</label>
        <textarea name="content" class="form-control" rows="8" required><%= cleanedContent || post.content %></textarea>
      </div>
      
      <% if (images && images.length > 0) { %>
        <div class="mb-3">
          <label class="form-label">현재 사진</label>
          <div class="d-flex flex-wrap gap-2">
            <% images.forEach((img, index) => { %>
              <div class="position-relative" style="width: 120px;">
                <img src="<%= img.image_path %>" alt="사진 <%= index + 1 %>" style="width: 120px; height: 120px; object-fit: cover; border-radius: 8px;" />
                <button type="button" class="btn btn-sm btn-danger position-absolute top-0 end-0 m-1 btn-delete-image" data-img-id="<%= img.id %>" style="width: 24px; height: 24px; padding: 0; line-height: 1;">×</button>
                <input type="hidden" name="deleteImages" value="<%= img.id %>" id="deleteImg<%= img.id %>" disabled />
              </div>
            <% }); %>
          </div>
        </div>
      <% } %>
      
      <div class="mb-3">
        <label class="form-label"><% if (category && category !== 'info') { %>사진 추가 (선택) - 최대 15장<% } else { %><%= images && images.length > 0 ? '사진 변경 (선택)' : '사진 업로드 (선택)' %><% } %></label>
        <input type="file" name="images" class="form-control" accept="image/*" <% if (category && category !== 'info') { %>multiple<% } %> />
        <small class="text-muted">JPG, PNG, GIF, WebP 형식만 가능합니다. (최대 50MB<% if (category && category !== 'info') { %>, 최대 15장<% } %>)</small>
        <div id="imagePreview" class="mt-2"></div>
      </div>
      <div class="d-flex gap-2">
        <button class="btn btn-primary">저장</button>
        <a class="btn btn-outline-secondary" href="<%= category ? `/category/${category}` : '/board' %>">취소</a>
      </div>
    </form>
  </main>
  <script>
    // 이미지 삭제 버튼 위임 핸들러
    document.addEventListener('click', function(e){
      const btn = e.target.closest('.btn-delete-image');
      if (!btn) return;
      const imgId = btn.getAttribute('data-img-id');
      if (confirm('이 사진을 삭제하시겠습니까?')) {
        const hidden = document.getElementById('deleteImg' + imgId);
        if (hidden) hidden.disabled = false;
        btn.closest('.position-relative').style.display = 'none';
      }
    });
    // 여러 이미지 미리보기 (카테고리와 무관하게 안전하게 동작)
    const imagesInput = document.querySelector('input[name="images"]');
    if (imagesInput) imagesInput.addEventListener('change', function(e) {
      const preview = document.getElementById('imagePreview');
      preview.innerHTML = '';
      
      if (e.target.files.length > 15) {
        alert('최대 15장까지만 업로드 가능합니다.');
        e.target.value = '';
        return;
      }
      
      Array.from(e.target.files).forEach((file, index) => {
        if (file.type.startsWith('image/')) {
          const reader = new FileReader();
          reader.onload = function(e) {
            const div = document.createElement('div');
            div.className = 'd-inline-block me-2 mb-2';
            div.innerHTML = `
              <img src="${e.target.result}" style="width: 100px; height: 100px; object-fit: cover; border-radius: 4px;" />
              <div class="small text-center">${index + 1}</div>
            `;
            preview.appendChild(div);
          };
          reader.readAsDataURL(file);
        }
      });
    });

    // 내용 textarea 자동 높이 조절
    (function(){
      const ta = document.querySelector('textarea[name="content"]');
      if (!ta) return;
      const autoresize = () => {
        ta.style.height = 'auto';
        ta.style.height = (ta.scrollHeight + 2) + 'px';
      };
      ta.addEventListener('input', autoresize);
      window.addEventListener('load', autoresize);
      setTimeout(autoresize, 0);
    })();
  </script>
</body>
</html>
