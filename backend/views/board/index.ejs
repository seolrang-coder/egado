<!doctype html>
<html lang="ko">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>게시판</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@400;600;700;800&display=swap" rel="stylesheet">
  <style> body{font-family:'Noto Sans KR',system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial}</style>
</head>
<body>
  <nav class="navbar navbar-expand-lg bg-light border-bottom">
    <div class="container">
      <a class="navbar-brand" href="/index.html">홈</a>
      <div class="ms-auto d-flex gap-2">
        <% if (!currentUser) { %>
          <a class="btn btn-outline-primary btn-sm" href="/login">로그인</a>
          <a class="btn btn-primary btn-sm" href="/register">회원가입</a>
        <% } else { %>
          <span class="navbar-text me-2">안녕하세요, <strong><%= currentUser.username %></strong>님</span>
          <form action="/logout" method="post"><button class="btn btn-outline-secondary btn-sm">로그아웃</button></form>
        <% } %>
      </div>
    </div>
  </nav>

  <main class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h1 class="h3 mb-0">게시판</h1>
      <% if (currentUser) { %>
        <a class="btn btn-primary" href="/board/new">새 글</a>
      <% } %>
    </div>

    <div class="list-group">
      <% if (!posts.length) { %>
        <div class="text-muted">첫 글을 남겨보세요.</div>
      <% } %>
      <% posts.forEach(p => { %>
        <div class="list-group-item">
          <div class="d-flex justify-content-between align-items-start">
            <div>
              <h5 class="mb-1"><%= p.title %></h5>
              <div class="small text-muted">작성자 <%= p.username %> · <%= new Date(p.created_at).toLocaleString('ko-KR') %></div>
              <p class="mb-1 mt-2" style="white-space:pre-wrap"><%= p.content %></p>
            </div>
            <% if (currentUser && (currentUser.is_admin || currentUser.id === p.user_id)) { %>
              <div class="ms-3 d-flex flex-column gap-2">
                <a class="btn btn-sm btn-outline-secondary" href="/posts/<%= p.id %>/edit">수정</a>
                <form action="/posts/<%= p.id %>/delete" method="post" onsubmit="return confirm('삭제하시겠습니까?')">
                  <button class="btn btn-sm btn-outline-danger">삭제</button>
                </form>
              </div>
            <% } %>
          </div>
        </div>
      <% }) %>
    </div>
  </main>
</body>
</html>
