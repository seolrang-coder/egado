<!doctype html>
<html lang="ko">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= categoryName || '새 글 작성' %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@400;600;700;800&display=swap" rel="stylesheet">
  <style> 
    body{font-family:'Noto Sans KR',system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial}
    /* 체크박스 테두리 두껍고 진하게 */
    .form-check-input {
      border: 3px solid #333 !important;
      width: 1.25em !important;
      height: 1.25em !important;
      border-radius: 0.25em !important;
    }
    .form-check-input:checked {
      background-color: #0d6efd;
      border-color: #0d6efd !important;
    }
    .form-check-input:focus {
      border-color: #333 !important;
      box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg bg-light border-bottom">
    <div class="container">
      <a class="navbar-brand" href="<%= typeof orgType !== 'undefined' && orgType === 'coop' ? '/coop-board.html' : (typeof orgType !== 'undefined' && orgType === 'golf' ? '/golf-board.html' : (category ? `/category/${category}` : '/board.html')) %>"><%= categoryName || '게시판' %></a>
      <div class="ms-auto d-flex gap-2">
        <form action="<%= typeof orgType !== 'undefined' && orgType === 'coop' ? '/coop/logout' : (typeof orgType !== 'undefined' && orgType === 'golf' ? '/golf/logout' : '/logout') %>" method="post"><button class="btn btn-outline-secondary btn-sm">로그아웃</button></form>
      </div>
    </div>
  </nav>

  <main class="container py-4" style="max-width: 800px;">
    <h1 class="h3"><%= categoryName || '새 글 작성' %></h1>
    <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>
    <form action="<%= typeof orgType !== 'undefined' && orgType === 'coop' ? '/coop/posts' : (typeof orgType !== 'undefined' && orgType === 'golf' ? '/golf/posts' : '/posts') %>" method="post" enctype="multipart/form-data" class="mt-3">
      <% if (category) { %>
        <input type="hidden" name="category" value="<%= category %>">
      <% } %>
      <div class="mb-3">
        <label class="form-label">제목</label>
        <input name="title" class="form-control" required />
      </div>
      
      <% 
        const projectCategories = ['lovehouse', 'volunteer', 'mobilitycare', 'beauty'];
        const isProjectCategory = category && projectCategories.includes(category);
      %>
      
      <% if (isProjectCategory) { %>
        <div class="card mb-3 border-primary">
          <div class="card-header bg-primary text-white">
            <h6 class="mb-0"><i class="bi bi-info-circle me-2"></i>사업 정보</h6>
          </div>
          <div class="card-body">
            <div class="row g-3">
              <div class="col-md-6">
                <label class="form-label">사업명</label>
                <input type="text" name="businessName" class="form-control" placeholder="사업명을 입력하세요" />
              </div>
              <div class="col-md-6">
                <label class="form-label">실시일</label>
                <input type="text" name="date" class="form-control" placeholder="예: 2025.01.15" />
              </div>
              <div class="col-md-6">
                <label class="form-label">대상</label>
                <input type="text" name="target" class="form-control" placeholder="대상을 입력하세요" />
              </div>
              <div class="col-md-6">
                <label class="form-label">참여인원</label>
                <input type="text" name="participants" class="form-control" placeholder="예: 30명" />
              </div>
              
            </div>
          </div>
        </div>
      <% } %>
      
      <div class="mb-3">
        <label class="form-label">내용</label>
        <textarea name="content" class="form-control" rows="12" required></textarea>
      </div>
      <% if ((!category || category === 'general') && currentUser && currentUser.is_admin) { %>
      <div class="mb-3">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" name="is_notice" id="is_notice" value="1">
          <label class="form-check-label" for="is_notice">
            공지사항으로 등록
          </label>
        </div>
        <small class="text-muted">공지사항으로 등록하면 게시판 상단에 고정 표시됩니다.</small>
      </div>
      <% } %>
      <div class="mb-3">
        <label class="form-label">사진 업로드 (선택)<% if (category && category !== 'info') { %> - 최대 15장<% } %></label>
        <input type="file" name="images" class="form-control" accept="image/*" <% if (category && category !== 'info') { %>multiple<% } %> />
        <small class="text-muted">JPG, PNG, GIF, WebP 형식만 가능합니다. (최대 50MB<% if (category && category !== 'info') { %>, 최대 15장<% } %>)</small>
        <div id="imagePreview" class="mt-2"></div>
      </div>
      <div class="d-flex gap-2">
        <button class="btn btn-primary">등록</button>
        <a class="btn btn-outline-secondary" href="<%= typeof orgType !== 'undefined' && orgType === 'coop' ? '/coop-board.html' : (typeof orgType !== 'undefined' && orgType === 'golf' ? '/golf-board.html' : (category ? `/category/${category}` : '/board.html')) %>">목록</a>
      </div>
    </form>
  </main>
  <script>
    // 여러 이미지 미리보기 (안전 가드)
    const imagesInput = document.querySelector('input[name="images"]');
    if (imagesInput) imagesInput.addEventListener('change', function(e) {
      const preview = document.getElementById('imagePreview');
      preview.innerHTML = '';
      
      if (e.target.files.length > 15) {
        alert('최대 15장까지만 업로드 가능합니다.');
        e.target.value = '';
        return;
      }
      
      Array.from(e.target.files).forEach((file, index) => {
        if (file.type.startsWith('image/')) {
          const reader = new FileReader();
          reader.onload = function(e) {
            const div = document.createElement('div');
            div.className = 'd-inline-block me-2 mb-2';
            div.innerHTML = `
              <img src="${e.target.result}" style="width: 100px; height: 100px; object-fit: cover; border-radius: 4px;" />
              <div class="small text-center">${index + 1}</div>
            `;
            preview.appendChild(div);
          };
          reader.readAsDataURL(file);
        }
      });
    });

    // 내용 textarea 자동 높이 조절
    (function(){
      const ta = document.querySelector('textarea[name="content"]');
      if (!ta) return;
      const autoresize = () => {
        ta.style.height = 'auto';
        ta.style.height = (ta.scrollHeight + 2) + 'px';
      };
      ta.addEventListener('input', autoresize);
      window.addEventListener('load', autoresize);
      setTimeout(autoresize, 0);
    })();
  </script>
</body>
</html>
