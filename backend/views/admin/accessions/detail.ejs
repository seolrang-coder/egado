<!doctype html>
<html lang="ko">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>조합원 가입 신청 상세 | <%= typeof orgName !== 'undefined' ? orgName : '전국장애인나눔협동조합' %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <style>
    .status-badge {
      padding: 0.5rem 1rem;
      border-radius: 999px;
      font-weight: 600;
      display: inline-block;
    }
    .status-pending { background: #fff3cd; color: #856404; }
    .status-reviewing { background: #cfe2ff; color: #084298; }
    .status-approved { background: #d4edda; color: #155724; }
    .status-rejected { background: #f8d7da; color: #721c24; }
    .status-completed { background: #d1e7dd; color: #0f5132; }
    .info-box {
      background: #f8f9fa;
      border-left: 4px solid #4b4b8f;
      padding: 1rem;
      border-radius: 0.25rem;
      margin-bottom: 1rem;
    }
    .document-item {
      border: 1px solid #dee2e6;
      border-radius: 0.5rem;
      padding: 1rem;
      margin-bottom: 0.5rem;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
    .document-preview {
      max-width: 200px;
      max-height: 200px;
      border-radius: 0.25rem;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
    <div class="container">
      <a class="navbar-brand d-flex align-items-center gap-2" href="/nanum.html">
        <strong><%= typeof orgName !== 'undefined' ? orgName : '전국장애인나눔협동조합' %></strong>
      </a>
      <div class="ms-auto d-flex gap-2 align-items-center flex-wrap">
        <span class="navbar-text">안녕하세요, <strong><%= currentUser.username %></strong>님</span>
        <a href="/coop/admin/users" class="btn btn-outline-primary btn-sm">
          <i class="bi bi-people me-1"></i>회원 관리
        </a>
        <a href="/coop/admin/accessions" class="btn btn-primary btn-sm">
          <i class="bi bi-file-earmark-text me-1"></i>가입 신청 관리
        </a>
        <a href="/coop/admin/solar-gallery" class="btn btn-outline-primary btn-sm">
          <i class="bi bi-images me-1"></i>태양광 갤러리
        </a>
        <a href="/coop/admin/settings" class="btn btn-outline-primary btn-sm">
          <i class="bi bi-gear me-1"></i>사이트 설정
        </a>
        <a href="/nanum.html" class="btn btn-outline-secondary btn-sm">홈으로</a>
        <form action="/coop/logout" method="post" class="d-inline">
          <button type="submit" class="btn btn-outline-secondary btn-sm">로그아웃</button>
        </form>
      </div>
    </div>
  </nav>

  <main class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2>조합원 가입 신청 상세</h2>
      <div>
        <% 
          const statusMap = {
            'pending': { class: 'status-pending', text: '대기중' },
            'reviewing': { class: 'status-reviewing', text: '검토중' },
            'approved': { class: 'status-approved', text: '승인됨' },
            'rejected': { class: 'status-rejected', text: '거절됨' },
            'completed': { class: 'status-completed', text: '완료' }
          };
          const statusInfo = statusMap[accession.status] || { class: 'status-pending', text: '대기중' };
        %>
        <span class="status-badge <%= statusInfo.class %>"><%= statusInfo.text %></span>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-person-fill me-2"></i>신청자 정보</h5>
          </div>
          <div class="card-body">
            <div class="row g-3">
              <div class="col-md-6">
                <label class="form-label text-muted small">신청번호</label>
                <p class="mb-0 fw-bold"><%= accession.id %></p>
              </div>
              <div class="col-md-6">
                <label class="form-label text-muted small">성함</label>
                <p class="mb-0 fw-bold"><%= accession.name %></p>
              </div>
              <div class="col-md-6">
                <label class="form-label text-muted small">생년월일</label>
                <p class="mb-0"><%= accession.birthdate %></p>
              </div>
              <div class="col-md-6">
                <label class="form-label text-muted small">연락처</label>
                <p class="mb-0">
                  <a href="tel:<%= accession.phone %>"><%= accession.phone %></a>
                </p>
              </div>
              <div class="col-md-6">
                <label class="form-label text-muted small">이메일</label>
                <p class="mb-0">
                  <a href="mailto:<%= accession.email %>"><%= accession.email %></a>
                </p>
              </div>
              <div class="col-md-6">
                <label class="form-label text-muted small">주소</label>
                <p class="mb-0"><%= accession.address %></p>
              </div>
              <div class="col-md-12">
                <label class="form-label text-muted small">장애유형 및 등급</label>
                <p class="mb-0"><%= accession.disability_type %></p>
              </div>
              <% if (accession.message) { %>
                <div class="col-md-12">
                  <label class="form-label text-muted small">추가 메모</label>
                  <p class="mb-0"><%= accession.message %></p>
                </div>
              <% } %>
            </div>
          </div>
        </div>

        <!-- 첨부 서류 -->
        <% if (documents.length > 0) { %>
          <div class="card mb-4">
            <div class="card-header bg-info text-white">
              <h5 class="mb-0"><i class="bi bi-paperclip me-2"></i>첨부 서류 및 자료 (<%= documents.length %>개)</h5>
            </div>
            <div class="card-body">
              <% documents.forEach((doc, index) => { %>
                <div class="document-item">
                  <div class="d-flex align-items-center gap-3">
                    <% if (doc.file_path.match(/\.(jpg|jpeg|png|gif|webp)$/i)) { %>
                      <img src="<%= doc.file_path %>" alt="<%= doc.file_name %>" class="document-preview" onclick="window.open('<%= doc.file_path %>', '_blank')">
                    <% } else { %>
                      <i class="bi bi-file-earmark fs-1 text-primary"></i>
                    <% } %>
                    <div>
                      <p class="mb-0 fw-bold"><%= doc.file_name %></p>
                      <p class="mb-0 text-muted small"><%= (doc.file_size / 1024).toFixed(2) %> KB</p>
                    </div>
                  </div>
                  <a href="<%= doc.file_path %>" target="_blank" class="btn btn-sm btn-outline-primary">
                    <i class="bi bi-download me-1"></i>다운로드
                  </a>
                </div>
              <% }); %>
            </div>
          </div>
        <% } %>
      </div>

      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-header bg-secondary text-white">
            <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>신청 정보</h5>
          </div>
          <div class="card-body">
            <div class="mb-3">
              <label class="form-label text-muted small">신청일</label>
              <p class="mb-0"><%= new Date(accession.created_at).toLocaleString('ko-KR') %></p>
            </div>
            <% if (accession.updated_at) { %>
              <div class="mb-3">
                <label class="form-label text-muted small">최종 수정일</label>
                <p class="mb-0"><%= new Date(accession.updated_at).toLocaleString('ko-KR') %></p>
              </div>
            <% } %>
          </div>
        </div>

        <!-- 상태 변경 -->
        <div class="card mb-4">
          <div class="card-header bg-warning text-dark">
            <h5 class="mb-0"><i class="bi bi-gear me-2"></i>상태 변경</h5>
          </div>
          <div class="card-body">
            <form id="statusForm">
              <div class="mb-3">
                <label class="form-label small">상태 선택</label>
                <select name="status" class="form-select" id="statusSelect">
                  <option value="pending" <%= accession.status === 'pending' ? 'selected' : '' %>>대기중</option>
                  <option value="reviewing" <%= accession.status === 'reviewing' ? 'selected' : '' %>>검토중</option>
                  <option value="approved" <%= accession.status === 'approved' ? 'selected' : '' %>>승인됨</option>
                  <option value="rejected" <%= accession.status === 'rejected' ? 'selected' : '' %>>거절됨</option>
                  <option value="completed" <%= accession.status === 'completed' ? 'selected' : '' %>>완료</option>
                </select>
              </div>
              <button type="submit" class="btn btn-primary w-100">
                <i class="bi bi-check-circle me-1"></i>상태 변경
              </button>
            </form>
          </div>
        </div>

        <!-- 관리 액션 -->
        <div class="card">
          <div class="card-header bg-danger text-white">
            <h5 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>위험한 작업</h5>
          </div>
          <div class="card-body">
            <form id="deleteForm" onsubmit="return confirm('정말로 이 신청서를 삭제하시겠습니까? 이 작업은 되돌릴 수 없습니다.');">
              <button type="submit" class="btn btn-danger w-100">
                <i class="bi bi-trash me-1"></i>신청서 삭제
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <div class="mt-4">
      <a href="/coop/admin/accessions" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>목록으로
      </a>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // 상태 변경
    document.getElementById('statusForm').addEventListener('submit', async function(e) {
      e.preventDefault();
      const status = document.getElementById('statusSelect').value;
      
      try {
        const response = await fetch('/coop/admin/accessions/<%= accession.id %>/status', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ status })
        });

        const result = await response.json();
        if (result.success) {
          alert('상태가 변경되었습니다.');
          location.reload();
        } else {
          alert(result.error || '상태 변경 중 오류가 발생했습니다.');
        }
      } catch (error) {
        console.error('Error:', error);
        alert('상태 변경 중 오류가 발생했습니다.');
      }
    });

    // 삭제
    document.getElementById('deleteForm').addEventListener('submit', async function(e) {
      e.preventDefault();
      
      if (!confirm('정말로 이 신청서를 삭제하시겠습니까? 이 작업은 되돌릴 수 없습니다.')) {
        return;
      }
      
      try {
        const response = await fetch('/coop/admin/accessions/<%= accession.id %>/delete', {
          method: 'POST'
        });

        if (response.ok) {
          alert('신청서가 삭제되었습니다.');
          window.location.href = '/coop/admin/accessions';
        } else {
          alert('삭제 중 오류가 발생했습니다.');
        }
      } catch (error) {
        console.error('Error:', error);
        alert('삭제 중 오류가 발생했습니다.');
      }
    });
  </script>
</body>
</html>

